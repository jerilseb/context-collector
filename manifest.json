{
  "manifest_version": 3,
  "name": "Context Collector",
  "version": "1.0.7",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "commands"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "./icons/128.png"
    },
    "default_title": "Context Collector"
  },
  "icons": {
    "256": "icons/256.png",
    "128": "icons/128.png",
    "64": "icons/64.png",
    "48": "icons/48.png",
    "32": "icons/32.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "collect-content": {
      "suggested_key": {
        "default": "Alt+X",
        "mac": "Alt+X"
      },
      "description": "Collect content from current page (when active)"
    }
  }
}