{
  "manifest_version": 3,
  "name": "Context Collector",
  "version": "1.0.1",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "commands"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "./icons/128.png"
    },
    "default_title": "Context Collector"
  },
  "icons": {
    "128": "./icons/128.png",
    "48": "./icons/48.png",
    "16": "./icons/16.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "collect-content": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Collect content from current page (when active)"
    }
  }
}